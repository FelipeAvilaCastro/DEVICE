@model DEVICE.Web.ViewModels.RegistroUsuarioViewModel
@*@using DEVICE.Web.Models
@model IEnumerable<Persona>*@

    <h5>Listado de Usuarios</h5>
    <table id="tbListadoPersonas" class="display" style="width:100%">

            <thead>
                <tr>
                    <th hidden scope="col">ID</th>
                    <th scope="col">Apellido Paterno</th>
                    <th scope="col">Apellido Materno</th>
                    <th scope="col">Nombres</th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Departamento</th>
                    <th scope="col">Puesto</th>
                    <th scope="col">Sucursal</th>
                    <th scope="col">Correo</th>
                    @*<th scope="col">Sucursal</th>*@
                    <th scope="col"></th>

                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model.ListadoPersona)
                {
                <tr>
                    <td hidden scope="row">@item.Id</td>
                    <td>@item.Paterno</td>
                    <td>@item.Materno</td>
                    <td>@item.Nombres</td>
                    <td>@item.Usuario</td>
                    <td>@Model.ListadoDepartamento.Where(x => x.Id == item.DepartamentoID).FirstOrDefault().Descripcion </td>
                    <td>@item.Puesto</td>
                    <td>@Model.ListadoSucursal.Where(x => x.Id == item.SucursalID).FirstOrDefault().Descripcion </td>
                    <td>@item.Correo</td>
                    <td>
                        <button id="btnEliminarProducto"
                                class="btnEliminarProducto btn btn-danger"
                                data-id="@item.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </button>

                        <button id="btnEditarProducto"
                                class="btnEditarProducto btn btn-warning"
                                data-id="@item.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </button>
                    </td>

                </tr>

                }

            </tbody>

        </table>


        <script>
            loadTable()
            function loadTable() {
                var table = $('#tbListadoPersonas').DataTable({
                    /*lengthChange: false,*/
                    /*buttons: ['copy', 'excel', 'pdf','csv','print','colvis']*/
                    buttons: ['copy', 'excel', 'pdf', 'print', 'colvis']
                });

                table.buttons().container()
                    .insertBefore('#tbListadoPersonas_filter');

            }
        </script>
