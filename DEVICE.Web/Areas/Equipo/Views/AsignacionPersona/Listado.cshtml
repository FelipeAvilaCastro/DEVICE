@using DEVICE.Web.Models
@model IEnumerable<PersonaProducto>

<table id="tbPersonaProducto" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Producto</th>
            <th>Fecha Entrega</th>
            <th>Fecha Cambio</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var nombreFirma = "../../Documents/AsignacionPersona/" + item.PersonaProductoEvidencia.Where(x => x.PersonaProductoId == item.Id && x.Tipo == "S").FirstOrDefault().NombreArchivo;
            var nombreFoto = "../../Documents/AsignacionPersona/" + item.PersonaProductoEvidencia.Where(x => x.PersonaProductoId == item.Id && x.Tipo == "P").FirstOrDefault().NombreArchivo;
            <tr>
                <td>@(item.Persona.Nombres + " " + item.Persona.Paterno)</td>
                <td>@(item.Producto.Modelo + " " + item.Producto.NumeroSerie)</td>
                <td>@item.FechaEntrega.Value.ToShortDateString()</td>
                <td>@item.FechaProximaCambio.Value.ToShortDateString()</td>
                <td>@(item.Estado==true?"Asignado":"Liberado")</td>
                <td>
                    <a data-id="@item.Id" dowload="@nombreFirma" data-tipo="S" class="btn btn-info btnVerFirma"
                       href="@(nombreFirma)">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-files" viewBox="0 0 16 16">
                            <path d="M13 0H6a2 2 0 0 0-2 2 2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h7a2 2 0 0 0 2-2 2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm0 13V4a2 2 0 0 0-2-2H5a1 1 0 0 1 1-1h7a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1zM3 4a1 1 0 0 1 1-1h7a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V4z" />
                        </svg>

                    </a>

                    <a data-id="@item.Id" dowload="@nombreFoto" data-tipo="P" class="btn btn-info btnVerFoto"
                       href="@(nombreFoto)">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-camera" viewBox="0 0 16 16">
                            <path d="M15 12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1h1.172a3 3 0 0 0 2.12-.879l.83-.828A1 1 0 0 1 6.827 3h2.344a1 1 0 0 1 .707.293l.828.828A3 3 0 0 0 12.828 5H14a1 1 0 0 1 1 1v6zM2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4H2z" />
                            <path d="M8 11a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5zm0 1a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7zM3 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                        </svg>

                    </a>


                    <button data-id="@item.Id" data-estado="@item.Estado" class="btn btn-success btnCambiarEstado" title="Cambiar Estado">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-right" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M1 11.5a.5.5 0 0 0 .5.5h11.793l-3.147 3.146a.5.5 0 0 0 .708.708l4-4a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 11H1.5a.5.5 0 0 0-.5.5zm14-7a.5.5 0 0 1-.5.5H2.707l3.147 3.146a.5.5 0 1 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 4H14.5a.5.5 0 0 1 .5.5z" />
                        </svg>
                    </button>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Usuario</th>
            <th>Producto</th>
            <th>Fecha Entrega</th>
            <th>Fecha Cambio</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </tfoot>
</table>


<script>
    loadTable()
    function loadTable() {
        var table = $('#tbPersonaProducto').DataTable({
            lengthChange: false,
            buttons: ['copy', 'excel', 'pdf','csv','print','colvis']
        });

        table.buttons().container()
            .insertBefore('#tbPersonaProducto_filter');

    }
</script>